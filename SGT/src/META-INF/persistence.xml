<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	
	<persistence-unit name="GTGS" transaction-type="RESOURCE_LOCAL">
		<class>entidade.Banimento</class>
		<class>entidade.Campeonato</class>
		<class>entidade.Chave</class>
		<class>entidade.CampeonatoTime</class>
		<class>entidade.Classificacao</class>
		<class>entidade.Funcionario</class>
		<class>entidade.Driver</class>
		<class>entidade.FuncionarioCampeonato</class>
		<class>entidade.Jogador</class>
		<class>entidade.JogadorDriver</class>
		<class>entidade.JogadorBanimento</class>
		<class>entidade.JogadorPartida</class>
		<class>entidade.Marca</class>
		<class>entidade.Usuario</class>
		<class>entidade.Time</class>
		<class>entidade.TimePartida</class>
		<class>entidade.PcPartida</class>
		<class>entidade.Pc</class>
		<class>entidade.Periferico</class>
		<class>entidade.Permissao</class>
		<class>entidade.Modalidade</class>
		<class>entidade.Grupo</class>
		<class>entidade.Partida</class>
		<class>entidade.TimeGrupo</class>
		
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		
		<properties> 
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" /> 
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sgtg" /> 
			<property name="javax.persistence.jdbc.user" value="jclan" /> 
			<property name="javax.persistence.jdbc.password" value="jcuser" />
		</properties>
	</persistence-unit>
</persistence>
